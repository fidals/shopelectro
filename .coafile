# https://github.com/coala/bear-docs/blob/master/README.rst#python

[all]
bears = InvalidLinkBear,SpaceConsistencyBear
use_spaces = True
files = **/(*.py|*.es6)
ignore = shopelectro/**/__init__.py,shopelectro/**/__pycache__/**,front/**/vendors/**,front/(images|fonts|build)/**,shopelectro/migrations/**,shopelectro/settings/**,venv/**

[all.python]
bears = CPDBear,PycodestyleBear,PyDocStyleBear,PyFlakesBear
files = shopelectro/**/*.py
minimum_tokens = 35
max_line_length = 100
# https://pycodestyle.readthedocs.io/en/latest/intro.html#error-codes
# ignore W503 according to pep8 notes: https://goo.gl/rEjtY6
pycodestyle_ignore = E305,W503
pydocstyle_ignore = D100,D101,D102,D103,D104,D105,D106,D203,D212
language = Python 3

[all.javascript]
bears = CPDBear,ESLintBear
files = front/js/**/*.es6
eslint_config = ./.eslintrc
language = JavaScript
