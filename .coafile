# coala python 3 bears:
# https://github.com/coala/bear-docs/blob/master/README.rst#python

# @todo #158:60m Настройти pylint
# @todo #158:60m Настроить eslint

[all]
bears = InvalidLinkBear,SpaceConsistencyBear
use_spaces = True
files = **/(*.py|*.es6)
ignore = shopelectro/**/__init__.py,shopelectro/**/__pycache__/**,front/**/vendors/**,front/(images|fonts|build)/**,shopelectro/migrations/**

[all.python]
bears = CPDBear,PycodestyleBear,PyDocStyleBear,RadonBear
files = shopelectro/**/*.py
minimum_tokens = 30
max_line_length = 100
pycodestyle_ignore = E305
pydocstyle_ignore = D100,D101,D102,D103,D104,D105,D106
force_sort_within_import_sections = False
use_parentheses_in_import = False
language = Python 3

[all.javascript]
bears = CPDBear,JSComplexityBear,ESLintBear
files = front/js/**
eslint_config = ./.eslintrc
language = JavaScript
